<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btnSeeContent"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="228dp"
        android:text="Content"
        app:icon="@drawable/ic_search"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSeeCriterion"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="228dp"
        android:text="Criterion"
        app:icon="@drawable/ic_search"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="EMP0001-00221"
        app:layout_constraintBottom_toTopOf="@+id/txtFormat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUseItForPacking"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="64dp"
        android:text="Packing"
        app:icon="@drawable/ic_packing"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtFormat"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Boite 10 cm"
        app:layout_constraintBottom_toTopOf="@+id/txtScheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLegalizeIt"
        style="@style/Widget.App.Button.OutlinedButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="64dp"
        android:text="Location"
        app:icon="@drawable/ic_location"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSeeLogs"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="144dp"
        android:text="Logs"
        app:icon="@drawable/ic_journal"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtCustomer"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginBottom="340dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Le mont St-Michel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtScheme"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Mon plan de la mort > sont enfant > moi"
        app:layout_constraintBottom_toTopOf="@+id/txtCustomer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtBarcode"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="28dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="000001021548741"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/imgBarcode"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgStateOfUnit2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="76dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_available"
                app:layout_constraintEnd_toStartOf="@+id/imgTypeOfUnit2"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/imgStatusOfUnit2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="76dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_in_stock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/imgTypeOfUnit2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="76dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_ug"
                app:layout_constraintEnd_toStartOf="@+id/imgStatusOfUnit2"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/imgBarcode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_barcode"
                android:contentDescription="@string/app_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>